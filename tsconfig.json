{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es7"],
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "jsx": "react",
    "noImplicitAny": false
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["node_modules", "./src/**/*.spec.ts"]
}
